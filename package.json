{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "openstatus",
  "title": "OpenStatus",
  "description": "Blazingly Fast Monitor with Status Reports Management",
  "icon": "OpenStatus.png",
  "author": "nabhag8848",
  "categories": [
    "Developer Tools",
    "System",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "create-status-report",
      "title": "Create Status Report",
      "description": "Create Status Report",
      "mode": "view"
    },
    {
      "name": "show-reports",
      "title": "Show Status Report",
      "description": "Show Status Report",
      "mode": "view"
    },
    {
      "name": "unresolved-reports",
      "title": "Menu Bar Reports",
      "description": "Shows Unresolved Status Reports",
      "mode": "menu-bar"
    }
  ],
  "preferences": [
    {
      "name": "access_token",
      "description": "Enter your OpenStatus Access Token",
      "type": "password",
      "title": "Access Token",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.68.1",
    "@raycast/utils": "^1.12.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
